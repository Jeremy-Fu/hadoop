<?xml version="1.0"?>
<hdfs>
	<core>		
		<replica-factor>2</replica-factor>
		
		<chunk-size unit="MB">5</chunk-size>
		
		<read-buff-size unit="KB">512</read-buff-size>
		<write-buff-size unit="KB">512</write-buff-size>
		
		<heartbeat-freq unit="sec"> 1 </heartbeat-freq>
		<system-check unit="sec"> 20 </system-check>

		<partition-tolerance unit="sec"> 10 </partition-tolerance>
		
		<hdfs-tmp> ./tmp </hdfs-tmp>

		<ip>10.0.0.16</ip>
		<port>1099</port>
	</core>

	<datanode>
		<registry-port>1201</registry-port>
		<server-port>8001</server-port>
	</datanode>

</hdfs>
